#Ex 1
# Faça um programa que leia um múmero inteiro e o imprima

x = int(input("Entre com o valor do númeri inteiro: \n"))
print("O valor do número é",x)

#Ex 2
#Faça um programa que leia um número real e o imprima

x = float(input("Entre com o valor do número real: \n"))
print("O valor do número é",x)


#Entre 3 valores inteiros e faça a soma deles
print("Entre 3 valores inteiros e faça a soma deles")
a = int(input("Digite o valor de a: "))
b = int(input("Digite o valor de b: "))
c = int(input("Digite o valor de c: "))
d = a+b+c
print("O valor da soma é", d)

#Ex 4
#Faça a leitura de um número real e imprima o quadrado dele
print("Leitura de um número real e o quadrado dele")
a = int(input("Digite o de um número: "))
num = a*a
print("O valor do quadrado é", num)

# Exercício 5
# Ler um número e imprimir a quinta parte dele

print(" Ler um número e imprimir a quinta parte dele")
a = float(input('Entre com o valor de um número: '))
num = a/5
print(" A quinta parte do número é", num)

#Ex 6
#Leia uma temperatura em Graus Celsius e apresente-a convertida em graus Fahrenheit.

c = float(input("Entre com a temperatua em graus Celsius: \n"))
f = round(c*(9/5)+32,2)
print("A temperatura em Fahrenheit é",f)

#Ex 7
#Leia uma temperatura em graus Fahrenheit e apresente-a convertida em Graus Celsius.

f = float(input("Entre com a temperatua em graus Fahrenheit: \n"))
c = round(5*((f-32)/9),2)
print("A temperatura em Celsius é",c)

#Ex 8
#Leia uma temperatura em Kelvin e apresente-a convertida em Graus Celsius.

k = float(input("Entre com a temperatua em Kelvin: \n"))
c = round(k - 273.15,2)
print("A temperatura em Celsius é",c)

#Ex 9
#Leia uma temperatura em Graus Celsius e apresente-a convertida em Kelvin.

c = float(input("Entre com a temperatua em graus Celsius: \n"))
k = round(c + 273.15,2)
print("A temperatura em Kelvin é",k)

#Ex 10
#Leia uma velocidade em km/h e apresente-a em m/s

vi = float(input("Entre com a velocidade em km/h: \n"))
vf = round(vi/3.6,2)
print("A velocidade em metros por segundos é",vf)

#Ex 11
#Leia uma velocidade em m/s e apresente-a em km/h

vi = float(input("Entre com a velocidade em m/s: \n"))
vf = round(vi*3.6,2)
print("A velocidade em kilometros por hora é",vf)

#Ex 12
#Leia uma distância em milhas e apresente-a em kilômetros

di = float(input("Entre com a distância em milhas: \n"))
df = round(di*1.61,2)
print("A distância em kilometros é",df)

#Ex 13
#Leia uma distância em kilômetros e apresente-a em milhas

di = float(input("Entre com a distância em km: \n"))
df = round(di/1.61,2)
print("A distância em milhas é",df)

#Ex 14
#Leia um ângulo em graus e converta-o em radianos

ai = float(input("Entre com o valor do ângulo em graus: \n"))
af = round((ai/180),2)
print("O ângulo em radianos é",af,"pi")

#Ex 15
#Leia um ângulo em radianos e converta-o em graus

ai = float(input("Entre com o valor do ângulo em radianos: \n"))
af = round((ai*180)/3.14)
print("O ângulo em graus é",af)

#Ex 16
#Leia um valor em polegadas e converta-o em centímetros.

di = float(input("Entre com o valor do comprimento em polegadas: \n"))
df = round(di*2.54,1)
print("O valor do comprimento em centímetros é",df,"centímetros")

#Ex 17
#Leia um valor em centímetros e converta-o em polegadas.

di = float(input("Entre com o valor do comprimento em centímetros: \n"))
df = round(di/2.54,1)
print("O valor do comprimento em polegadas é",df,"polegadas")

#Ex 18
#Leia um valor em metros cúbicos e apresente-o convertido em litros.

di = float(input("Entre com o valor do volume em metros cúbicos: \n"))
df = round(di*1000)
print("O valor do volume em litros é",df,"litros")

#Ex 19
#Leia um valor em litros e apresente-o convertido em metros cúbicos.

di = float(input("Entre com o valor do volume em litros: \n"))
df = round(di/1000,2)
print("O valor do volume em metros cúbicos é",df,"m3")

#Ex 20
#Leia um valor de massa em quilogramas e converta-o em libras

di = float(input("Entre com o valor em kilos: \n"))
df = round(di/0.45,2)
print("O valor do volume em libras é",df)
